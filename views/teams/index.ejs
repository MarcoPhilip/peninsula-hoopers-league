<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Teams</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/css/images/phl-logo.png" type="image/png">
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="main-header">
        <div class="logo">
            <img src="/css/images/phl-logo.png" >
        </div>
        <div class="headers">
            <h1>Peninsula Hoopers League: My Teams</h1>
        </div>
    </div>
    <main class="teams">
        <% teams.forEach(team => { %>
            <a href="/teams/<%= team._id %>">
                <div class="team-card">
                    <h2><%= team.name %></h2>
                    <p><%= team.division %></p>
                </div>
            </a>
        <% }); %>
        <div>
            <a href="/users/<%= user._id %>/teams/new">Add a Team</a>
        </div>
    </main>
</body>
</html>
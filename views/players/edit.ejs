<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a Team</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/css/images/phl-logo.png" type="image/png">
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="main-header">
        <div class="logo">
            <img src="/css/images/phl-logo.png" >
        </div>
        <div class="headers">
            <h1>Add a Player: <%= team.name %></h1>
        </div>
    </div>
    <main class="team-form">
        <form action="/users/<%= user._id %>/teams/<%= team._id %>/players/<%= player._id %>?_method=PUT" method="POST">

            <label for="firstname">First Name:</label>
            <input type="text" name="firstname" id="firstname" value="<%= player.firstname %>" required>

            <label for="lastname">Last Name:</label>
            <input type="text" name="lastname" id="lastname" value="<%= player.lastname %>" required>

            <label for="position">Position:</label>
            <select name="position" id="position" value="<%= player.position %>" required>
                <option value="PG">PG</option>
                <option value="SG">SG</option>
                <option value="C">C</option>
                <option value="SF">SF</option>
                <option value="PF">PF</option>
                <option value="Coach">Coach</option>
            </select>

            <label for="height">Height:</label>
            <input type="text" name="height" id="height" placeholder="Example: 6'2&quot;" required>

            <button type="submit">Submit</button>
        </form>
        <section class="player-actions">
            <% if (currentUser && currentUser._id.toString() === user._id.toString()) { %>

                <form action="/users/<%= team.owner._id %>/teams/<%= team._id %>/players/<%= player._id%>?_method=DELETE" method="POST">
                    <button type="submit">Remove This Player</button>
                </form>

            <% } %>
        </section>
    </main>
</body>
</html>